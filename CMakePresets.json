{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_COLOR_DIAGNOSTICS": "ON",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION_RELEASE": "ON"
            }
        },
        {
            "name": "windows",
            "hidden": true,
            "inherits": "base",
            "condition": { "type": "equals", "rhs": "Windows", "lhs": "${hostSystemName}" }
        },
        {
            "name": "linux",
            "hidden": true,
            "inherits": "base",
            "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copySourcesOptions": {
                        "copySourcesOptions.exclusionList": [
                            ".vs",
                            ".git",
                            ".cache",
                            "build",
                            "install"
                        ]
                    }
                }
            }
        },
        {
            "name": "msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_CXX_FLAGS": "/utf-8 /W4 /GR /EHsc /wd4127 /wd4251 /wd4275 /permissive- /Zc:inline /Zc:throwingNew /Zc:preprocessor /volatile:iso /DWIN32 /D_WINDOWS /D_SCL_SECURE_NO_WARNINGS /DWIN32_LEAN_AND_MEAN /D_WIN32_WINNT=0x0A00",
                "CMAKE_CXX_FLAGS_DEBUG"  : "/JMC /Zi /Od",
                "CMAKE_CXX_FLAGS_RELEASE": "/Zi /O2 /Oi /Ob2 /DNDEBUG /Gw /Gy",
                "CMAKE_EXE_LINKER_FLAGS_DEBUG"     : "/DEBUG:FASTLINK /INCREMENTAL",
                "CMAKE_MODULE_LINKER_FLAGS_DEBUG"  : "/DEBUG:FASTLINK /INCREMENTAL",
                "CMAKE_SHARED_LINKER_FLAGS_DEBUG"  : "/DEBUG:FASTLINK /INCREMENTAL",
                "CMAKE_EXE_LINKER_FLAGS_RELEASE"   : "/DEBUG /INCREMENTAL:NO /OPT:REF /OPT:ICF",
                "CMAKE_MODULE_LINKER_FLAGS_RELEASE": "/DEBUG /INCREMENTAL:NO /OPT:REF /OPT:ICF",
                "CMAKE_SHARED_LINKER_FLAGS_RELEASE": "/DEBUG /INCREMENTAL:NO /OPT:REF /OPT:ICF"
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "CMAKE_CXX_FLAGS_DEBUG"  : "-O0 -g -gsplit-dwarf",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG",
                "CMAKE_EXE_LINKER_FLAGS"   : "-Wl,--exclude-libs=ALL -Wl,-z,defs -Wl,--as-needed",
                "CMAKE_MODULE_LINKER_FLAGS": "-Wl,--exclude-libs=ALL -Wl,-z,defs -Wl,--as-needed",
                "CMAKE_SHARED_LINKER_FLAGS": "-Wl,--exclude-libs=ALL -Wl,-z,defs -Wl,--as-needed",
                "CMAKE_EXE_LINKER_FLAGS_DEBUG"   : "-Wl,--gdb-index",
                "CMAKE_MODULE_LINKER_FLAGS_DEBUG": "-Wl,--gdb-index",
                "CMAKE_SHARED_LINKER_FLAGS_DEBUG": "-Wl,--gdb-index"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wno-missing-braces",
                "CMAKE_CXX_FLAGS_DEBUG"  : "-O0 -g -gsplit-dwarf",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG",
                "CMAKE_EXE_LINKER_FLAGS"   : "-Wl,--exclude-libs=ALL -Wl,-z,defs -Wl,--as-needed",
                "CMAKE_MODULE_LINKER_FLAGS": "-Wl,--exclude-libs=ALL -Wl,-z,defs -Wl,--as-needed",
                "CMAKE_SHARED_LINKER_FLAGS": "-Wl,--exclude-libs=ALL -Wl,-z,defs -Wl,--as-needed",
                "CMAKE_EXE_LINKER_FLAGS_DEBUG"   : "-Wl,--gdb-index",
                "CMAKE_MODULE_LINKER_FLAGS_DEBUG": "-Wl,--gdb-index",
                "CMAKE_SHARED_LINKER_FLAGS_DEBUG": "-Wl,--gdb-index"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "KL_BENCH": "ON"
            }
        },
        {
            "name": "Linux-GCC-Debug",
            "inherits": ["linux", "gcc", "debug"]
        },
        {
            "name": "Linux-GCC-Release",
            "inherits": ["linux", "gcc", "release"]
        },
        {
            "name": "Linux-Clang-Debug",
            "inherits": ["linux", "clang", "debug"]
        },
        {
            "name": "Linux-Clang-Release",
            "inherits": ["linux", "clang", "release"]
        },
        {
            "name": "x64-Debug",
            "inherits": ["windows", "msvc", "debug"],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "x64-Release",
            "inherits": ["release", "x64-Debug"]
        },
        {
            "name": "x64-VS2022",
            "inherits": ["windows", "msvc"],
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "set"
            }
        }
    ]
}

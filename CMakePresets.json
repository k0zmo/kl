{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_COLOR_DIAGNOSTICS": "ON"
            }
        },
        {
            "name": "windows",
            "hidden": true,
            "inherits": "base",
            "condition": { "type": "equals", "rhs": "Windows", "lhs": "${hostSystemName}" }
        },
        {
            "name": "linux",
            "hidden": true,
            "inherits": "base",
            "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copySourcesOptions": {
                        "copySourcesOptions.exclusionList": [
                            ".vs",
                            ".git",
                            ".cache",
                            "build",
                            "install"
                        ]
                    }
                }
            }
        },
        {
            "name": "msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/DWIN32 /D_WINDOWS /W4 /GR /EHsc /wd4127 /wd4251 /wd4275 /D_SCL_SECURE_NO_WARNINGS",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wno-missing-braces",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Linux-GCC-Debug",
            "inherits": ["linux", "gcc", "debug"]
        },
        {
            "name": "Linux-GCC-Release",
            "inherits": ["linux", "gcc", "release"]
        },
        {
            "name": "Linux-Clang-Debug",
            "inherits": ["linux", "clang", "debug"]
        },
        {
            "name": "Linux-Clang-Release",
            "inherits": ["linux", "clang", "release"]
        },
        {
            "name": "x64-Debug",
            "inherits": ["windows", "msvc", "debug"],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "x64-Release",
            "inherits": ["release", "x64-Debug"]
        },
        {
            "name": "x64-VS2022",
            "inherits": ["windows", "msvc"],
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "set"
            }
        }
    ]
}

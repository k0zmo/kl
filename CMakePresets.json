{
    "version": 3,
    "configurePresets": [
        {
            "name": ":base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_COLOR_DIAGNOSTICS": "ON",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION_RELEASE": "ON"
            }
        },
        {
            "name": ":windows",
            "hidden": true,
            "inherits": ":base",
            "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" }
        },
        {
            "name": ":linux",
            "hidden": true,
            "inherits": ":base",
            "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copySourcesOptions": {
                        "exclusionList": [
                            ".vs",
                            ".vscode",
                            ".git",
                            ".cache",
                            "build",
                            "install",
                            "out"
                        ]
                    }
                }
            }
        },
        {
            "name": ":cl",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/toolchain/cl.cmake",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": ":gcc",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/toolchain/gcc.cmake"
        },
        {
            "name": ":clang",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/toolchain/clang.cmake",
            "cacheVariables": {
                "CMAKE_PCH_INSTANTIATE_TEMPLATES": "ON"
            }
        },
        {
            "name": ":debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": ":release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "KL_BENCH": "ON"
            }
        },
        {
            "name": ":coverage",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Coverage"
            }
        },
        {
            "name": ":asan",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "ASan"
            }
        },
        {
            "name": ":tsan",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "TSan"
            }
        },
        {
            "name": ":ubsan",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "UBSan"
            }
        },
        {
            "name": ":msan",
            "description": "This is Clang-only configuration",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MSan"
            }
        },
        {
            "name": "Linux-GCC-Debug",
            "inherits": [":linux", ":gcc", ":debug"]
        },
        {
            "name": "Linux-GCC-Release",
            "inherits": [":linux", ":gcc", ":release"]
        },
        {
            "name": "Linux-GCC-Coverage",
            "inherits": [":linux", ":gcc", ":coverage"]
        },
        {
            "name": "Linux-GCC-AddressSanitizer",
            "inherits": [":linux", ":gcc", ":asan"]
        },
        {
            "name": "Linux-GCC-UBSanitizer",
            "inherits": [":linux", ":gcc", ":ubsan"]
        },
        {
            "name": "Linux-Clang-Debug",
            "inherits": [":linux", ":clang", ":debug"]
        },
        {
            "name": "Linux-Clang-Release",
            "inherits": [":linux", ":clang", ":release"]
        },
        {
            "name": "Linux-Clang-AddressSanitizer",
            "inherits": [":linux", ":clang", ":asan"]
        },
        {
            "name": "Linux-Clang-UBSanitizer",
            "inherits": [":linux", ":clang", ":ubsan"]
        },
        {
            "name": "x64-Debug",
            "inherits": [":windows", ":cl", ":debug"],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "x64-Release",
            "inherits": [":release", "x64-Debug"]
        },
        {
            "name": "x64-VS2019",
            "inherits": [":windows", ":cl"],
            "generator": "Visual Studio 16 2019",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "set"
            }
        },
        {
            "name": "x64-VS2022",
            "inherits": "x64-VS2019",
            "generator": "Visual Studio 17 2022"
        }
    ]
}
